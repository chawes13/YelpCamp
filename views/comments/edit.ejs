<% include ../partials/header %>

<div class="userInput">
    <h4>Edit Comment</h4>
    <form action="/campgrounds/<%=campgroundID%>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <textarea class="form-control" name="comment[text]" rows="5" placeholder="comment" required><%= comment.text %></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-success btn-block" type="submit">Update Comment</button>
        </div>
    </form>
</div>

